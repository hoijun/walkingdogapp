<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="dogInfo"
            type="com.tulmunchi.walkingdogapp.domain.model.Dog" />

        <variable
            name="beforeDogName"
            type="java.lang.String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/register_appBar"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.08"
                app:srcCompat="@drawable/icon_arrow_back" />

            <ImageView
                android:id="@+id/remove_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="25sp"
                android:src="@drawable/icon_delete"
                android:visibility="@{beforeDogName.empty ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.08" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4e4e4"
            app:layout_constraintTop_toBottomOf="@+id/register_appBar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_line">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/collection_unobtained"
                    app:civ_border_width="1.5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_register_profileImg"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/round_style_rad15_line"
                    android:backgroundTint="#e4e4e4"
                    android:text="사진 등록"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_profile" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/registerDog_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_register_profileImg">

                    <TextView
                        android:id="@+id/introduction_dogName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="이름 *"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/edit_Name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_edittext_border"
                        android:gravity="center|start"
                        android:hint="반려견 이름을 입력 해주세요."
                        android:maxLength="10"
                        android:text="@={dogInfo.name}"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:dogNameLength="@{dogInfo.name.length()}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/introduction_dogName"
                        app:layout_constraintWidth_percent="0.4" />

                    <TextView
                        android:id="@+id/introduction_dogBreed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:text="견종 *"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/edit_Name" />


                    <TextView
                        android:id="@+id/edit_breed"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_edittext_border"
                        android:gravity="center|start"
                        android:hint="견종을 선택 해주세요."
                        android:text="@{dogInfo.breed}"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/introduction_dogBreed"
                        app:layout_constraintWidth_percent="0.4" />

                    <TextView
                        android:id="@+id/introduction_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:text="성별 *"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/edit_breed"
                        app:layout_constraintWidth_percent="0.2" />

                    <Button
                        android:id="@+id/btn_dogIsMale"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="2.5dp"
                        android:background="@drawable/custom_button_border"
                        android:elevation="0dp"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="남"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:dogGender="@{dogInfo.gender}"
                        app:layout_constraintEnd_toStartOf="@+id/btn_dogIsFemale"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/introduction_gender" />

                    <Button
                        android:id="@+id/btn_dogIsFemale"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="2.5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_button_border"
                        android:elevation="0dp"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="여"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:dogGender="@{dogInfo.gender}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/btn_dogIsMale"
                        app:layout_constraintTop_toBottomOf="@id/introduction_gender" />

                    <TextView
                        android:id="@+id/introduction_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:text="생년월일 *"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btn_dogIsMale"
                        app:layout_constraintWidth_percent="0.2" />

                    <TextView
                        android:id="@+id/edit_birth"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_edittext_border"
                        android:gravity="center|start"
                        android:hint="날짜를 선택 해주세요."
                        android:text="@{dogInfo.birth}"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/introduction_birth"
                        app:layout_constraintWidth_percent="0.4" />

                    <TextView
                        android:id="@+id/introduction_neutering"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:text="예방 접종 *"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/edit_birth" />

                    <Button
                        android:id="@+id/btn_neuterIsYes"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="2.5dp"
                        android:background="@drawable/custom_button_border"
                        android:elevation="0dp"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="예"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:dogNeutering="@{dogInfo.neutering}"
                        app:layout_constraintEnd_toStartOf="@+id/btn_neuterIsNo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/introduction_neutering" />

                    <Button
                        android:id="@+id/btn_neuterIsNo"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="2.5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_button_border"
                        android:elevation="0dp"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="아니요"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:dogNeutering="@{dogInfo.neutering}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/btn_neuterIsYes"
                        app:layout_constraintTop_toBottomOf="@id/introduction_neutering" />

                    <TextView
                        android:id="@+id/introduction_vaccination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:text="중성화 *"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btn_neuterIsYes" />

                    <Button
                        android:id="@+id/btn_vaccIsYes"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="2.5dp"
                        android:background="@drawable/custom_button_border"
                        android:elevation="0dp"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="예"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:dogVaccination="@{dogInfo.vaccination}"
                        app:layout_constraintEnd_toStartOf="@+id/btn_vaccIsNo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/introduction_vaccination" />

                    <Button
                        android:id="@+id/btn_vaccIsNo"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="2.5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_button_border"
                        android:elevation="0dp"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="아니요"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:dogVaccination="@{dogInfo.vaccination}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/btn_vaccIsYes"
                        app:layout_constraintTop_toBottomOf="@id/introduction_vaccination" />

                    <TextView
                        android:id="@+id/introduction_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:text="몸무게(kg) *"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btn_vaccIsYes" />

                    <EditText
                        android:id="@+id/edit_weight"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_edittext_border"
                        android:digits="0123456789"
                        android:gravity="center|start"
                        android:hint="무게를 입력 해주세요."
                        android:inputType="number"
                        android:maxLength="2"
                        android:text="@={dogInfo.weight}"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/introduction_weight"
                        app:layout_constraintWidth_percent="0.4" />


                    <TextView
                        android:id="@+id/introduction_feature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:text="특징"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/edit_weight"
                        app:layout_constraintWidth_percent="0.2" />

                    <EditText
                        android:id="@+id/edit_feature"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_edittext_border"
                        android:gravity="top|start"
                        android:hint="특징를 입력 해주세요."
                        android:text="@={dogInfo.feature}"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/introduction_feature"
                        app:layout_constraintWidth_percent="0.6" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/btn_registerDog"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/round_style_rad15_line"
                    android:backgroundTint="#e4e4e4"
                    android:gravity="center"
                    android:text="등록"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/registerDog_Layout" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>